<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dbs.jmulhall.projectsafehavenapi25.Home"
    android:background="@android:color/background_light">


    <TextView
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblHeaderHome"
        android:textSize="32sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imgViewLogo"
        android:layout_below="@+id/lblHeaderHome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <Button
        android:text="Logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogout"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:padding="18dp"
        android:background="@color/place_autocomplete_prediction_secondary_text"
        android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="logout" />

    <Button
        android:text="Maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnMaps"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:padding="18dp"
        android:background="@color/place_autocomplete_prediction_secondary_text"
        android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
        android:onClick="goToMap"
        android:layout_above="@+id/btnLogout"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="9dp" />

    <Button
        android:text="Upload Registrations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnUploadRegistrations"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:padding="20dp"
        android:background="@color/place_autocomplete_prediction_secondary_text"
        android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
        android:onClick="goToUploadRegistrations"
        android:layout_above="@+id/btnMaps"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

    <Button
        android:text="View Registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnViewRegistrations"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:padding="20dp"
        android:background="@color/place_autocomplete_prediction_secondary_text"
        android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
        android:onClick="gotoViewRegistrations"
        android:layout_above="@+id/btnUploadRegistrations"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

    <Button
        android:text="New Registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnNewRegistration"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:padding="20dp"
        android:background="@color/place_autocomplete_prediction_secondary_text"
        android:textColor="@color/cast_libraries_material_featurehighlight_text_header_color"
        android:onClick="goToNewRegistrations"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/btnViewRegistrations"
        android:layout_alignParentStart="true" />

</RelativeLayout>
